body.navigation-minimized
    .b-sidebar
        display none
        margin-top 80px
        width 231px
        position fixed
        
    .b-sidebar
    .b-sidebar-footer
        background #474b53
        
    .page-content
        margin-left 0
        
    .page-container 
        .page-content-wrap
            padding 10px 5px
            
    .b-breadcrumb
        padding 0 0 19px
        
        .breadcrumb
            margin-right 0
            padding-bottom 15px
            padding-top 25px
            border-bottom 1px solid $grey
            margin-left 55px
            padding-left 10px
            white-space nowrap
        
    .btn-support
        float right
        margin-left 0
        margin-top 18px
        margin-right 5px
            
    .navigation-trigger
        position relative
        display block
        height 80px
        width 55px
        background $grey 
        float left
        margin-right -100%
        cursor pointer
        centered-icon($icon--menu-trigger)
        &:hover
            background darken($grey, 1%) 