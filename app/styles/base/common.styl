.hidden
	display none
	
.invisible
	visibility hidden
	
.dropdown
	position relative

	&__trigger
		z-index 3
		position relative
		cursor pointer

	&__content
		position absolute
		padding-top 20px
		left 0
		right 0
		top 0
		z-index 2

		li
			text-align left
			
			a
			u
				display block
				width 100%	
				padding 9px 20px
				font-size 13px
				line-height 22px
				text-decoration none
				color #333
				background transparent
				transition background 0.1 ease-in-out
				white-space nowrap
				border-bottom 1px solid $grey

				&:hover
					background $grey
		
			&.active > a
			&.active > u
				color #ccc
				position relative
				&:after
					content ''
					display inline-block
					margin-left 8px
					sprite($dropdown__active)

				&:hover
					color #ccc
					background none
					cursor default
		.submenu__item
			a
				padding-left 36px
				
/* Инлайновый дропдаун */
.inline-sorter 
	display inline-block
	padding 0 30px 0 20px
	min-width 211px
	line-height 16px
	z-index 6

	.selector__current
		color #fff
		border-bottom 1px dashed rgba(#fff, 0.25)
		&.active
			color #555
			border-bottom none

	.dropdown__content
		top -18px
		padding-top 40px
		
		li
			a
				font-size 15px
				padding-right 5px 
				overflow hidden
				text-overflow ellipsis
			&.active
				a 
					color #A9A7A3
					background #efece7 
			
		
		

.dropdown__content
.chosen-drop
.suggestions-suggestions
