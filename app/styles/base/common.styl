.hidden
	display none
	
.invisible
	visibility hidden
	
.dropdown
	position relative

	&__trigger
		z-index 3
		position relative
		cursor pointer

	&__content
		position absolute
		padding-top 20px
		left 0
		right 0
		top 0
		z-index 2

		li
			text-align left
			
			a
			u
				display block
				width 100%	
				padding 9px 20px
				font-size 13px
				line-height 22px
				text-decoration none
				color #333
				background transparent
				transition background 0.1 ease-in-out
				white-space nowrap
				border-bottom 1px solid $grey

				&:hover
					background $grey
		
			&.active > a
			&.active > u
				color #ccc
				position relative
				&:after
					content ''
					display inline-block
					margin-left 8px
					sprite($dropdown__active)

				&:hover
					color #ccc
					background none
					cursor default
		.submenu__item
			a
				padding-left 36px
				
/* Инлайновый дропдаун */
.inline-sorter 
	display inline-block
	padding 0 30px 0 20px
	min-width 211px
	line-height 16px
	z-index 6

	.selector__current
		color #fff
		border-bottom 1px dashed rgba(#fff, 0.25)
		&.active
			color #555
			border-bottom none

	.dropdown__content
		top -18px
		padding-top 40px
		
		li
			a
				font-size 15px
				padding-right 5px 
				overflow hidden
				text-overflow ellipsis
			&.active
				a 
					color #A9A7A3
					background #efece7 
			
.tabs
		width 100%
		zoom 1
		position relative
		box-sizing content-box
		margin 0 -4px 6px
		padding 0 4px 4px
		overflow hidden
		
				
.tab
	&__trigger
		float left
		position relative
		left 0
		padding 0
		z-index 1
		
		span
			display block
			height 100%
			cursor pointer

		&.selected	
			span
				color #000
				cursor default
				border-bottom 0

	&__content
		display none
		float right
		text-align left
		width 100%
		min-height 150px 
		position relative
		z-index 2
		margin-left -100%
		background #FFF
		box-shadow 0 1px 1px rgba(#000, 0.2)
		
		

		& > .content
			
			padding-top 20px

		&.selected
			display block		
	
.tabs
	.tab__trigger
		padding 0 15px
		line-height 50px
		height 50px
		margin-right 20px

		span
			color $a__link

		&:hover
			span
				color #333

		&.selected
			z-index 2
			background #FFF 
			span
					color #000
			&:hover
				span
					color #000

	.tab__content
		border-top 1px solid $grey
		margin-top 49px
		z-index 1

		& > .content
			padding-top 33px







