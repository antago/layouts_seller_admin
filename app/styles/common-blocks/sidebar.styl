.b-sidebar
	color #fff
	height 100%
	padding-bottom 76px
	
	&-header
		height 100px
		border-bottom 1px solid #3e424a
		
		.dropdown__trigger
			z-index 10
			&.active
				color #000
			&:after
				content ''
				position absolute
				top 50%
				right 2px
				margin-top -1px
				display block
				width 0
				height 0
				border 6px solid transparent
				border-top-color #fff
				background none 
				z-index 5
				
			&.active
				&:after
					border-top-color transparent
					border-bottom-color #000
					margin-top -8px

					
		&__title
			display block
			padding 10px
			padding-left 70px
			margin-right 10px
			position relative
			top 3px
			overflow hidden
			font-size 13px
			
			&:before
				pseudo()
				width 60px
				height 60px
				float left
				margin 0 10px 0 -60px
				border-radius 60px
				display block
				position relative
				overflow hidden
				background #fff url('../images/logo/logo.png') 50% 50% no-repeat

			&:after
				content ''
				display inline-block
				margin-left 8px
				sprite($dropdown__active)
		
		&__menu
			padding-top 100px
			z-index 9
			
			
	&-subheader
		min-height 100px
		padding 20px 5px 0
		border-bottom 1px solid #3e424a
		
		.b-shop
			position relative
			text-align center
			
			&__image

				img
					display block
					margin 0 auto 5px
					height 40px
					width auto
			
			&__data
				font-size 16px
				margin-bottom 10px
				
			&__control
				padding 10px
				margin 0 -5px
				font-size 14px
				cursor pointer
				
	&-search
		position relative
		height 40px
		
		.icon
			display block
			position absolute
			top 10px
			left 20px
			width 20px
			height 20px
		
		&__input
			padding 5px 10px 5px 50px
			font-size 14px
			line-height 20px
			height 40px
			width 100%
			background #474b53
			color #FFF 
			border none
			
			&:focus
				background #797e89
				
	&-footer
		height 76px
		position fixed
		bottom 0
		width 231px
		border-top 1px solid #3e424a
		z-index 1
		
		&__actions
			height 100%
			width 100%
			display block
			font-size 0
			
			&-item
				display inline-block
				height 76px
				width 76px
				border-right 1px solid #3e424a
				background #474b53
				
				&:last-child
					border-right none 
					
		&__action
			position relative
			display block
			background transparent
			cursor pointer
			height 100%
			width 100%
		
			&:hover
				background rgba(#000, 0.15)
						

.icon
	position relative
	
	&--settings
		centered-icon($icon--settings)
		
	&--cart
		centered-icon($icon--cart)
		
	&--help
		centered-icon($icon--help)

	&--home
		centered-icon($icon--home)

	&--shop
		centered-icon($icon--shop)
		
	&--goods
		centered-icon($icon--goods)
		
	&--sales
		centered-icon($icon--sales)
		
	&--docs
		centered-icon($icon--docs)
		
	&--users
		centered-icon($icon--users)
		
	&--search
		centered-icon($icon--search)

.menu__item--logout
	position relative
	centered-icon($icon--logout)
	&:after
		left auto!important
		right 20px













